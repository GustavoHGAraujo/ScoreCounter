<resources>

    <style name="ScoreCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#005e5e</item>
        <item name="colorPrimaryVariant">#005e5e</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorSecondary">#FFF44F</item>
        <item name="colorSecondaryVariant">#EDE451</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">#ffffff</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="android:colorEdgeEffect">@color/primaryBackground</item>
        <item name="myIconTint">#959595</item>
        <item name="myDiceColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">@color/primaryBackground</item>
        <item name="superBottomSheet_backgroundColor">@color/primaryBackground</item>
        <item name="materialButtonStyle">@style/MyButton</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:background">@color/primaryBackground</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="AppBarStyle" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@color/primaryBackground</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="EditCounterTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>


</resources>

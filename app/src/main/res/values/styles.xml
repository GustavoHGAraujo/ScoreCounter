<resources>

    <style name="ScoreCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#54FFBD</item>
        <item name="colorPrimaryVariant">#54FFBD</item>
        <item name="colorOnPrimary">#000</item>
        <item name="colorSecondary">#6E008B</item>
        <item name="colorSecondaryVariant">#6E008B</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#FF4F5E</item>
        <item name="colorOnError">#ffffff</item>
        <item name="colorSurface">@color/primaryBackground</item>
        <item name="android:textColorPrimary">#de000000</item>
        <item name="android:textColorSecondary">#89000000</item>
        <item name="android:textColorHint">#42000000</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="android:colorEdgeEffect">@color/primaryBackground</item>
        <item name="android:statusBarColor">@color/primaryBackground</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="myIconTint">#000000</item>
        <item name="plus_picture">@drawable/empty_state_counters_light</item>
        <item name="dice_picture">@drawable/empty_state_dice_light</item>
        <item name="history_picture">@drawable/empty_state_history_light</item>
        <item name="colors_scheme">@array/light</item>
        <item name="materialButtonStyle">@style/MyButton</item>
        <item name="android:textViewStyle">@style/InterTextViewStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
</style>

    <style name="ToolBarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppBarStyle" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/primaryBackground</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="TwoLinesStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/list_two_lines_min_height</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/font_subheading</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:colorControlActivated">?android:colorPrimary</item>
    </style>

    <style name="EmptyStateMessage" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxWidth">@dimen/empty_state_max_width</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_subheading</item>
    </style>

    <style name="MiniDiceStyle">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="autoSizeMaxTextSize">@dimen/font_display</item>
        <item name="autoSizeMinTextSize">@dimen/font_body</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="DefaultHelperTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="InterTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="MyBottomSheetStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent
        </item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/primaryBackground</item>
        <item name="android:colorBackground">@color/primaryBackground</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/ButtonBarTheme</item>
    </style>

    <style name="ButtonBarTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>
